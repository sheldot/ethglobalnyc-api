{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "jsxBracketSameLine": false,
  "jsxSingleQuote": false,
  "printWidth": 50,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "useTabs": false,
  "vueIndentScriptAndStyle": false,
  "overrides": [
    {
      "files": "*.yaml",
      "options": {
        "bracketSpacing": false,
        "parser": "yaml"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 80
      }
    },
    {
      "files": "*.tsx",
      "options": {
        "printWidth": 80
      }
    }
  ]
}
